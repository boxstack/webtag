    <h2>Delete an Item</h2>
    @Html.ValidationSummary()
    <p>
      <a href="~/Items">Return to Items</a>
    </p>

    <form method="post">
      <fieldset>
        <legend>Item Information</legend>

        <p>
          <span>Tag:</span>
          <span>@tag</span>
